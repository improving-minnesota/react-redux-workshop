  script(type="text/plain", class="language-jsx", style="width:100%").
    import { Snackbar } from './snackbar';

    describe('when there is no message', () => {
      beforeEach(() => {
        element = shallow(<Snackbar />);
      });

      it('should hide the snackbar', () => {
        const div = element.find('div');
        expect(div).toHaveClassName('hide');
      });
    });

